$bg-color: #fff;
$dot-color: rgba(0,0,0,0.21);
$dot-size: 1px;
$dot-space: 22px;

.bg-pattern {
    background: linear-gradient(90deg, $bg-color calc($dot-space - $dot-size), transparent 1%) center,
linear-gradient($bg-color calc($dot-space - $dot-size), transparent 1%) center, $dot-color;
    background-size: $dot-space $dot-space;
}

.button {
    @apply clear-link bg-transparent border border-blue-400 text-blue-400 rounded-full py-2 px-6 whitespace-no-wrap;

    &:focus {
        @apply outline-none;
    }

    &:disabled {
        @apply border-gray-400 text-gray-400 cursor-default;
    }

    &:not(:disabled):hover {
        @apply bg-blue-400 border-transparent text-white;
    }
}

.button-darker {
    @apply button border-blue-600 text-blue-600;

    &:focus {
        @apply outline-none;
    }

    &:disabled {
        @apply border-gray-600 text-gray-600 cursor-default;
    }

    &:not(:disabled):hover {
        @apply bg-blue-600 border-transparent text-white;
    }
}
